
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2 class="mt-3">User info</h2>
        <div class="col-2">
          <%= image_tag user.get_profile_image(100,100), class:"mt-3 rounded-circle"; %>
        </div>
        <table class="table">
          <tbody>
            <tr></tr>
            <tr>
              <th>name</th>
              <th><%= user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><%= user.introduction %></th>
            </tr>
          </tbody>
        </table>
        <% if @user == current_user %>
          <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
        <% end %>
　

      <h2 class="mt-3">New book</h2>
      <% if book.errors.any? %>
        <ul class="alert alert-danger" role="alert">
          <h6 class="alert-heading">
            <%= book.errors.count %>件のエラーが発生しました
          </h6>
          <% book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
      <%= form_with model: book do |f| %>
        <label for="book_title">Title</label>
        <%= f.text_field :Title, class:"form-control", placeholder:"タイトル" %>
        <label for="book_opinion">Opinion</label>
        <%= f.text_area :Opinion, class:"form-control", rows:"3", placeholder:"コメントここに" %>
        <%= f.submit '投稿', class:"btn btn-lg btn-block btn-info mt-4" %>
      <% end %>
    </div>
  </div>
</div>