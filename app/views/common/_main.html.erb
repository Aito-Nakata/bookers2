
<div class="col-md-3">

  <h2 class="mt-3">User info</h2>
    <div class="col-2">
      <%= image_tag user.get_profile_image(100,100), class:"mt-3 rounded-square"; %>
    </div>
    <table class="table">
      <tbody>
        <tr></tr>
        <tr>
          <th>name</th>
          <th><%= user.name %></th>
        </tr>
        <tr>
          <th>introduction</th>
          <th><%= user.introduction %></th>
        </tr>
      </tbody>
    </table>
    <%= link_to edit_user_path(user.id), class:"btn btn-outline-secondary btn-block" do %>
        <i class="fas fa-user-cog"></i>
    <% end %>
    
  <h2 class="mt-3">New book</h2>
  <% if book.errors.any? %>
    <ul class="alert alert-danger" role="alert">
      <h6 class="alert-heading">
        <%= book.errors.count %>件のエラーが発生しました
      </h6>
      <% book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

  <%= form_with model: book do |f| %>
    <div class="form-group">
      <label>Title</label>
      <%= f.text_field :title, class:"form-control", placeholder:"タイトル" %>
    </div>
    <div class="form-group">
      <label>Opinion</label>
      <%= f.text_area :body, class:"form-control", rows:"3", placeholder:"コメントここに" %>
    </div>
    <div class="form-group">
      <%= f.submit 'Create Book', class:"btn btn-success" %>
    </div>
  <% end %>

</div>

